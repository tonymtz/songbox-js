{
    "env": {
        "node": true,
        "browser": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "ignorePatterns": ["/src/tests"],
    "settings": {
        "react": {
          "version": "16.8.2"
        }
    },
    "rules": {
        "semi": "error",
        "no-unused-vars":"warn",
        "no-process-env": "off",
        "indent": ["error", 4],
        "react/prop-types": "off"
    }
}