{
    "env": {
        "node": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "ignorePatterns": ["/public", "/routes/dist", "/tests"],
    "rules": {
        "semi": "error",
        "no-unused-vars":"warn",
        "indent": ["error", 4],
        "no-process-env": "off"
    }
}
